@page "/Reportes"
@using Microsoft.Extensions.Configuration
@using Infraestructura.Models.Clasificador
@inherits MainBaseComponent
@layout MainLayout
@inject IJSRuntime JSRuntime
@inject IConfiguration Configuration


<MudPaper Elevation="5" Class="my-4 p-4" Style="background: linear-gradient(to right, #ffffff, #f2f2f2); border-radius: 8px;">



    <MudContainer Class="py-2" MaxWidth="MaxWidth.Medium">
        <MudText Typo="Typo.h4" Class="text-white mb-2" GutterBottom="true">Centro de Reportes</MudText>

        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="mb-4">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Reporte Producción Formulario 1</MudText>

                    </MudCardContent>
                    <MudCardActions Class="justify-content-center">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Filled.QueryStats" OnClick="@OpenDialog">Consulta</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="mb-4">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Reporte de Producción Formulario 4</MudText>
                        
                    </MudCardContent>
                    <MudCardActions Class="justify-content-center">
                        <MudDatePicker Label="Fecha" Clearable="@(true)" @bind-Date="SelectedDate" />
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Filled.QueryStats" OnClick="@ReporteFormulario4">Consulta</MudButton>                  
                    </MudCardActions>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="mb-4">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Reportes Producción Actual Conforme</MudText>

                    </MudCardContent>
                    <MudCardActions Class="justify-content-center">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Filled.QueryStats" OnClick="@ReporteConformes">Consulta</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>

        </MudGrid>
    </MudContainer>
</MudPaper>